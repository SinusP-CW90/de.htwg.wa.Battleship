# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /about                      controllers.HomeController.about
GET     /test                       controllers.HomeController.test

GET     /battleship                             controllers.HomeController.battleship
GET     /battleship/newBattlefiled              controllers.HomeController.newBattlefiled
GET     /battleship/resize/:size                controllers.HomeController.resize(size:Int)
GET     /battleship/save                        controllers.HomeController.save
GET     /battleship/load                        controllers.HomeController.load
GET     /battleship/undo                        controllers.HomeController.undo
GET     /battleship/redo                        controllers.HomeController.redo
GET     /battleship/set/:row/:col               controllers.HomeController.set(row:String,col:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
